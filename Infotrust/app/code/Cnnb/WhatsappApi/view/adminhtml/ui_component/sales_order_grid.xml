<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="mass_order_custom_action">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_custom_action</item>
                        <item name="label" xsi:type="string" translate="true">Send whatsapp notification</item>
                        <item name="url" xsi:type="url" path="whatsappapi/order/notification"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>